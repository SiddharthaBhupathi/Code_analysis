{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Electric",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#f3f3f1",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#2500ff",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#f6f6f6",
					"name": "Tertiary",
					"slug": "tertiary"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--primary)",
			"text": "var(--wp--preset--color--secondary)"
		},
		"elements": {
			"button": {
				"border": {
					"style": "solid",
					"width": "2px",
					"color": {
						"ref": "styles.color.text"
					}
				},
				"color": {
					"background": {
						"ref": "styles.color.text"
					},
					"text": {
						"ref": "styles.color.background"
					}
				},
				"spacing": {
					"padding": {
						"top": ".667em",
						"right": "1.333em",
						"bottom": ".667em",
						"left": "1.333em"
					}
				},
				":active": {
					"typography": {
						"textDecoration": "underline dotted"
					}
				},
				":focus": {
					"typography": {
						"textDecoration": "underline dotted"
					}
				},
				":hover": {
					"border": {
						"color": {
							"ref": "styles.color.text"
						},
						"style": "solid",
						"width": "2px"
					},
					"color": {
						"background": {
							"ref": "styles.color.background"
						},
						"text": {
							"ref": "styles.color.text"
						}
					}
				},
				":visited": {
					"color": {
						"text": {
							"ref": "styles.color.background"
						}
					}
				}
			},
			"link": {
				":focus": {
					"typography": {
						"textDecoration": "underline dotted"
					}
				},
				":active": {
					"typography": {
						"textDecoration": "underline dotted"
					}
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--dm-sans)"
		}
	}
}
